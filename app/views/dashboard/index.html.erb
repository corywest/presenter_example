<h3>List of Repositories</h3>
<div class="repos">
  <ul>
    <% @repos.map do |repo| %>
     <li class="repo"> <%= repo[:name]  %> </li>
     <% end %>
  </ul>
</div>
<br><br>

<h3>List of Organizations</h3>
<div class="organizations">
  <ul>
    <% @orgs.map do |org| %>
     <li class="organization"> <%= org[:login]  %> </li>
     <% end %>
  </ul>
</div>

<br><br>

<h3>Basic Info</h3>

 <ul>
<li> starred count: <%= @starred.count %> </li>
 <li>  following: <%= @list_of_following %> </li>
 <li>  followers: <%= @list_of_followers %>
</ul>

<br><br>

<h3> Recent Activity </h3>

<ul>
<% @my_commits.each do |k,v| %>
<li> <%= k %> commit from <%= v %> repo  </li>
<% end %>
</ul>
